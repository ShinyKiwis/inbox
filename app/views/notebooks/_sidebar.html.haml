= action_button 'New notebook', new_notebook_path, style: 'normal', icon: 'plus', data: { turbo_frame: :new_notebook }
= turbo_frame_tag :new_notebook
%div{ data: { controller: 'context-menu' }}
  %span.sub-sidebar-section-title Notebooks
  #notebooks
    - notebooks.each do |notebook|
      = render 'notebook', notebook: notebook
  = render 'notebook_menu'
%div{ data: { controller: 'context-menu' }}
  .sub-sidebar-section-title{ data: {action: 'contextmenu->context-menu#toggle' }}
    %span Notebook Content
    - if @notebook
      = tooltip text: 'Add, delete content, and more...', data: { action: 'click->context-menu#toggle' } do
        = fa_icon 'ellipsis'
  = turbo_frame_tag :notebook_content do
    - if @notebook
      = render 'shared/local_search_bar', placeholder: 'Search notebook...'
  = render 'content_menu'
