.auth-container
  .auth-column
    = render 'shared/logo'
    %p.prompt
      Store and access your 
      %span.highlight digital notes
    %p.prompt anytime, anywhere.
    %p.prompt 2024 Inbox. All notes cherished
  .auth-column
    %h2 Sign in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .auth-form
        - if flash[:alert]
          = render 'shared/alert', type: 'error' do
            = flash[:alert]
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'in@box.com', required: true
        .field
          = f.label :password
          %br/
          = f.password_field :password, autocomplete: "current-password", placeholder: 'Super secret password', required: true
          - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
            = link_to "Forgot your password?", new_password_path(resource_name), style: 'float: right; margin-top: 0.4em;'
          = f.submit "Sign In", class: 'primary-button'
        %p.auth-prompt
          Don&apos;t have an account ?
          - if devise_mapping.registerable? && controller_name != 'registrations'
            = link_to "Create an account", new_registration_path(resource_name)

